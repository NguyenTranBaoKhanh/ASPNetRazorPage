@page
@model ASPNetRazorPage.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1> 

<div>
    <form method="post">
        <input hidden asp-for="Category.Id">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Delete Category</h2>
            </div>
            <div class="mb-3">
                <label asp-for="Category.Name"></label>
                <input disabled asp-for="Category.Name" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Category.DisplayOrder"></label>
                <input disabled asp-for="Category.DisplayOrder" class="form-control">
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="Index" class="btn btn-secondary">Back to list</a>
        </div>
    </form>
</div>

@* them nay de cho validation k load lai page *@
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}